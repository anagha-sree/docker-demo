version: '3'
services:
  user-mongo:
     image: mongo
     network_mode: host
     ports:
       - "27017:27017"
     environment:
       MONGO_DATABASE: DepartmentDB
       MONGO_PORT: 27017
       MONGO_HOST: localhost

  webapp4:
     image: webapp4-service
     build: 
       context: webapp4/
     depends_on:
       - user-mongo
     ports:
       - "8083:8083"
     network_mode: host
     restart: always
       


     
     
     
